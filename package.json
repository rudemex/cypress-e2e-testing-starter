{
  "name": "cypress-fecreditoempresas",
  "version": "1.0.0",
  "description": "End-to-end testing with cypress to spa fecreditoempresas.",
  "private": true,
  "scripts": {
    "start": "npm-run-all -l -p cy:open",
    "start:local": "cross-env CYPRESS_ENV=local npm run start:cy:open",
    "start:desa": "cross-env CYPRESS_ENV=desa npm run start:cy:open",
    "start:cy:open": "npm-run-all -l -p cy:open",
    "cy:open": "cypress open",
    "report": "npm-run-all -l -s -c prereport cy:report:desa cy:mochaReport cy:mergeReport",
    "cy:report": "cypress run",
    "cy:report:desa": "cross-env CYPRESS_ENV=desa cypress run",
    "cy:report:chrome": "cypress run -b chrome",
    "cy:report:headed": "cypress run --headed",
    "prereport": "npm-run-all -l -s delete:mochawesomejson delete:mochawesome delete:videos delete:screenshots delete:reports",
    "cy:mochaReport": "npx mochawesome-merge --reportDir ./cypress/reports/mocha > ./mochawesome-report/mochawesome.json",
    "cy:mergeReport": "npx mochawesome-report-generator ./mochawesome-report/mochawesome.json",
    "delete:mochawesomejson": "rm -rf mochawesome.json test-results.xml mochawesome-report.html || true",
    "delete:mochawesome": "rm -Rf ./mochawesome-report || true",
    "delete:videos": "rm -rf ./cypress/videos/* || true",
    "delete:screenshots": "rm -rf cypress/screenshots/* || true",
    "delete:reports": "rm -rf cypress/reports/* || true"
  },
  "dependencies": {
    "cypress-commands": "^0.2.0",
    "cypress-multi-reporters": "^1.1.23",
    "mocha-junit-reporters": "^1.23.6"
  },
  "devDependencies": {
    "cross-env": "^7.0.2",
    "cypress": "^3.4.1",
    "cypress-file-upload": "^3.3.4",
    "cypress-wait-until": "^1.7.1",
    "mocha": "^6.2.0",
    "mocha-junit-reporter": "^1.23.1",
    "mocha-multi-reporters": "^1.1.7",
    "mochawesome": "^4.1.0",
    "mochawesome-merge": "^2.0.1",
    "mochawesome-report-generator": "^4.0.1",
    "npm-run-all": "^4.1.5"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "**/mochawesome",
      "**/mochawesome/**",
      "**/mocha",
      "**/mocha/**",
      "**/cypress",
      "**/cypress/**"
    ]
  },
  "standard": {
    "globals": [
      "describe",
      "cy",
      "it",
      "beforeEach",
      "before",
      "afterEach",
      "after",
      "Cypress",
      "addContextTestReport"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.bancogalicia.com.ar/yece-creditoempresas/cypress-fecreditoempresas"
  },
  "author": "Maximiliano \"Mex\" Delgado <mdelgado@baufest.com>"
}
